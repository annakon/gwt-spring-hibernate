<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:HTMLPanel>
        <form role="form">
            <g:Hidden ui:field="id" />

            <div class="form-group">
                <label>Фамилия</label>
                <g:TextBox ui:field="lastname" styleName="form-control"/>
            </div>
            <div class="form-group">
                <label>Имя</label>
                <g:TextBox ui:field="firstname" styleName="form-control"/>
            </div>
            <div class="form-group">
                <label>Отчество</label>
                <g:TextBox ui:field="secondname" styleName="form-control"/>
            </div>
            <div class="form-group">
                <label>Дата рождения (формат 01.01.1970)</label>
                <g:TextBox ui:field="birthday" styleName="form-control"/>
            </div>
            <div class="form-group">
                <label>Опыт</label>
                <g:TextBox ui:field="experience" styleName="form-control"/>
            </div>
            <div class="form-group">
                <label>Описание</label>
                <g:TextBox ui:field="description" styleName="form-control"/>
            </div>
            <div>
                <g:Button ui:field='btnCancel' styleName="btn btn-default pull-left">Отменить</g:Button>
                <g:Button ui:field='btnSave' styleName="btn btn-default pull-right">Сохранить</g:Button>
            </div>
        </form>
    </g:HTMLPanel>
</ui:UiBinder>